<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.sunlab.helloworld.dao.IUserDao">

    <select id="selectUser" resultType="com.sunlab.helloworld.model.User" parameterType="long">
        SELECT * FROM ssm_hello_user WHERE id = #{id}
    </select>

</mapper>